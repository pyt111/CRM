<template>
	<div class="zhan_mian">
		<div ref="mian" >
			<Row>
                <Col :span="6" >    
					<span>提现状态：</span>
					<Select v-model="checkState" size="small" style="width: 100px" @on-change="optionChange">
                         <Option option  value="全部" v-for="item in checkStates":value="item.value" :key="item.value" >{{ item.label }}</Option>
                    </Select>				
				</Col>
                <Col :span="12">  
                    <span>时间搜索：</span>
                    <DatePicker type="daterange" 
					:v-model="options1" 
					:options="options2" 
					size="small" 
					placement="bottom-start" 
					placeholder="请选择日期" 
					style="width: 200px"
					format="yyyy-MM-dd"
					@on-change="dataChange"></DatePicker>	
					<Button type="info" size="small" icon="ios-search" @click="check">搜索</Button>																				
				</Col>
			</Row>
			<Row class="table" >		
				<Col :span="24">
					<Table  :columns="columns1"  :data="data1" ref='table' @on-selection-change='selChange'></Table>
					<div style="position:absolute;top:0px;width:100%;height:100%;display: flex;
									align-items: center;
									justify-content: center;background: rgba(210, 216, 222, 0.5);" v-if="loading">
						<Spin size="large"></Spin>
						<h6 style="color:#2d8cf0;margin-top:10px;">正在获取数据...</h6>
					</div>
				</Col>
				<Col :span="8" style="margin-top: 10px;"  class="page">	
                    <p >共{{total}}记录，每页显示{{pageSize}}条，共{{Math.ceil(total/pageSize)}}页</p>		
                </Col>
                <Col :span="16" class="pageP" style="text-align: right;margin-top: 10px;" >		  
				<!-- @on-change="setInitPage" -->
					<Page :total="total" 
					    :current="pageNum" 
						show-sizer show-elevator 
						:page-size-opts="array"
						:page-size="pageSize"
						@on-change="changepage"
						@on-page-size-change="pageChange" >
					</Page>
                </Col>
			</Row>
		</div>
	</div>
</template>


<script>
	import axios from 'axios';
	export default {
		data() {
			return {
                loading:false,
				options1:'',
				checkStates:[
					{value: '全部',label: '全部'},
                    {value: '已结算',label: '已结算'},
                    {value: '未结算',label: '未结算'},
                    {value: '等待支付',label: '等待支付'},
                    {value: '支付失败',label: '支付失败'}
				],
				checkState:'全部',
				// 电话
				phone:'',
				startTime:'',
				endTime:'',
				count:'',
				timer: null,
				pageNum:1,
				pageSize:12,
                valueDate:'',
				selItem:[],
                array:[12,14,18],
                // 初始化信息总条数
				total:0, 
				options2: {
                    shortcuts: [
                        {
                            text: '周',
                            value () {
                                const end = new Date();
                                const start = new Date();
                                start.setTime(start.getTime() - 3600 * 1000 * 24 * 7);
                                return [start, end];
                            }
                        },
                        {
                            text: '月',
                            value () {
                                const end = new Date();
                                const start = new Date();
                                start.setTime(start.getTime() - 3600 * 1000 * 24 * 30);
                                return [start, end];
                            }
                        },
                        {
                            text: '季',
                            value () {
                                const end = new Date();
                                const start = new Date();
                                start.setTime(start.getTime() - 3600 * 1000 * 24 * 90);
                                return [start, end];
                            }
                        },
                        {
                            text: '年',
                            value () {
                                const end = new Date();
                                const start = new Date();
                                start.setTime(start.getTime() - 3600 * 1000 * 24 * 360);
                                return [start, end];
                            }
                        }
                    ]
                },
				columns1: [
				{
					title: '提现金额',
					key: 'payMoney',
					align: 'center',
                    sortable: true
				}, {
					title: '手续费',
					key: 'payFee',
					align: 'center',
                    sortable: true
				},{
					title: '提现时间',
					key: 'checkTime',
					align: 'center',
					width:'150px'
				},{
					title: '提现状态',
					key: 'checkState',
					align: 'center',
					render:(h, params) => {
                        if (params.row.checkState == '已结算') {
							return h('span', {
								style:{
									color:'#64DA85'
								}
							},params.row.checkState);
						}else{
							return h('span', {
								style:{
									color:'red'
								}
							},params.row.checkState);
						}
                            
                    }
				}],
				// page_data1: [],
				data1:[],
				page:1　　　　　　　　
			}
		},
		methods: {
			selChange(sel){
                    this.selItem = sel;
			},
			check(){
				if(this.pageNum != 1){
					this.pageNum = 1;
				}
				this.Axios()
			},
			optionChange(events){
				   this.checkState = events;
				   this.Axios()
			},
			dataChange(event){
				this.options1 = event
				this.startTime = event[0]
				this.endTime = event[1]
				this.Axios()
				// console.log('111111111111111111'+event[0])
			},
			first(index){
				// console.log(this.data1[index].number)
				this.$router.push({
					 name: '投资统计', 
					 params: { userId: this.data1[index].number }
				})
			},
			Axios(){
                var params = new URLSearchParams()
				params.append('userId', 'e555d1ef-f415-417e-878c-edeed4fcd387')
				params.append('pageNum', this.pageNum)
				params.append('checkState', this.checkState)
				params.append('startTime', this.startTime)
				params.append('endTime', this.endTime)
				params.append('pageSize', this.pageSize)
                    this.loading = true;			
					axios.post(process.env.BASE_API+'/agent/achieve/detail',
					params
					)
					.then(reponse=>{
						this.loading = false;
						var res = reponse.data.result
						console.log(reponse)
						this.data1 = res.list;
						this.total = res.total
					})
					.catch(error=>{
						//alert('网络错误')
					})
			},
			changepage(index){
				this.pageNum = index
				this.Axios()
			},
			pageChange(index){
				this.pageSize = index
				this.Axios()
			},
			handleSubmit (name) {
                this.$refs[name].validate((valid) => {
                    if (valid) {
						this.$Message.success('Success!');
                    } else {
						this.$Message.error('Fail!');
                    }
                })
			},
		},
		mounted(){	
				this.Axios()
		}

	}
</script>

